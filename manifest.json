{
	"manifest_version": 2,
	"name": "iOS IMAP Notes",
	"description": "Edit IMAP Notes created by iOS devices within Thunderbird",
	"version": "1.0.2",
	"author": "Christian Eichert",
	"developer": {
		"name": "Christian Eichert, Jesse Lujack, John Bieling"
	},
	"default_locale": "en-US",
	"applications": {
		"gecko": {
			"id": "iOSNotes@zp1.net",
			"strict_min_version": "115.0"
		}
	},
	"options_ui": {
		"page": "options/options.html"
	},
    "commands": {
        "open-ios-editor": {
            "suggested_key": {
                "default": "Ctrl+Q"
            },
        "description": "Open the iOS notes editor"
        },
        "saveclose-ios-editor": {
            "suggested_key": {
                "default": "Alt+Q"
            },
        "description": "Save and close the note"
        }
    },
	"background": {
		"page": "background.html"
	},
	"icons": {
		"32": "images/iOSNotes.png"
	},
	"permissions": [
		"storage",
		"menus",
		"tabs",
		"messagesRead",
		"messagesMove",
		"messagesImport",
		"accountsRead",
		"accountsFolders",
		"messagesDelete"
	]
}
